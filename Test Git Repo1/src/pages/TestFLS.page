<apex:page standardController="Student__c" recordSetVar="contacts"> 
  <apex:pageBlock title="Contacts"> 
    <apex:form >
      <apex:dataTable value="{!contacts}" var="contact" cellPadding="4" border="1"> 
        <apex:column > 
          <apex:facet name="header">Name</apex:facet> 
            <apex:inputField value="{!contact.Name}" /> 
        </apex:column> 
        <apex:column > 
          <apex:facet name="header">Phone</apex:facet> 
            <apex:inputField value="{!contact.FKTeacher__c}" />
        </apex:column> 
        <apex:column > 
          <apex:facet name="header">Phone</apex:facet> 
            <apex:inputText value="{!contact.Grade_Level__c}" />
        </apex:column> 
      </apex:dataTable>
      <apex:commandButton action="{!save}" value="Save" />
    </apex:form> 
  </apex:pageBlock> 
</apex:page>